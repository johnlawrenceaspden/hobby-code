alias clj='rlwrap clojure'

#life is too short
#alias fnd='find . -iname'
function fnd
{
    command find . -iname "$1"
}

function fndg 
{  
    command find . -name "$1" -type f -print0 | xargs -0 -e grep --color -nH -e "$2"
}


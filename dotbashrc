function rtl1fsdb
{
    export COSIM_IDENTITY=jla 
    reset
    clear
    date 
    ~/myco/chip_test/src/tools/cosim/esnap --simv dv/blk/farmi_lite/sim --simv-args 'FSDB=1' --farmi --mccmdline "$1" true
    esnap_return_value=$?
    echo "return value " $esnap_return_value
    return $esnap_return_value
}


